SRCS		=	main.cpp
SRCS		+=	Profile.cpp
SRCS		+=	PhoneBook.cpp
			
			
OBJS		=	$(SRCS:.cpp=.o)
NAME		=	phonebook
CC			=	clang++
CFLAGS		=	-Wall -Wextra -Werror -std=c++98
RM			=	rm -f

$(NAME)		:	$(OBJS)
			$(CC) $(CFLAGS) $^ -o $@

all			:	$(NAME)

clean		:
			$(RM) $(OBJS)

fclean		:	clean
			$(RM) $(NAME)

re			:	fclean all

.PHONY		:	all clean fclean re
